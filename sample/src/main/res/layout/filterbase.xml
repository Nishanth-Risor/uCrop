<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150px"
    android:layout_height="200px"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/filterbaseimageview"
        >


    </ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        civ_border_width="4dp"

       android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:id="@+id/filterbasetick"
        android:src="@drawable/ic_tickmark"
        android:background="#90ee90"
        civ_border_color="#FF000000"
        android:layout_width="22dp"
        android:layout_height="22dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:id="@+id/filterbasebottombgrnd"
        android:background="@drawable/filterbasetextbgrnd">

    </ImageView>
    <TextView
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterbasetext"
        android:layout_alignLeft="@+id/filterbasebottombgrnd"
        android:layout_alignTop="@+id/filterbasebottombgrnd"
        android:padding="7px">

    </TextView>



</RelativeLayout>